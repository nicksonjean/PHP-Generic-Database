<?xml version="1.0" encoding="UTF-8" ?>
<root>
	<engine>mysqli</engine>
	<host>mysql</host>
	<port>3306</port>
	<database>demodev</database>
	<user>root</user>
	<password>masterkey</password>
	<charset>utf8</charset>
	<options>
		<option name="MySQL::ATTR_PERSISTENT">true</option>
		<option name="MySQL::ATTR_AUTOCOMMIT">true</option>
		<option name="MySQL::ATTR_INIT_COMMAND">SET NAMES 'utf8'</option>
		<option name="MySQL::ATTR_SET_CHARSET_NAME">utf8</option>
		<option name="MySQL::ATTR_OPT_INT_AND_FLOAT_NATIVE">true</option>
		<option name="MySQL::ATTR_OPT_CONNECT_TIMEOUT">28800</option>
		<option name="MySQL::ATTR_OPT_READ_TIMEOUT">30</option>
		<option name="MySQL::ATTR_READ_DEFAULT_GROUP">MAX_ALLOWED_PACKET=50M</option>
		<option name="MySQL::ATTR_DEFAULT_FETCH_MODE">MySQL::FETCH_OBJ</option>
	</options>
	<exception>true</exception>
</root>
