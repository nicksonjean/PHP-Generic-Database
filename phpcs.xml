<?xml version="1.0"?>
<ruleset name="A Custom Standard">
  <description>A Template for extending from PSR12</description>
  <config name="colors" value="1"/>
  <config name="tab_width" value="2"/>
  <config name="ignore_errors_on_exit" value="1"/>
  <config name="ignore_warnings_on_exit" value="1"/>
  <rule ref="PSR12" />
  <rule ref="Generic.Files.LineLength">
    <properties>
        <property name="lineLimit" value="360"/>
        <property name="absoluteLineLimit" value="360"/>
    </properties>
  </rule>
  <rule ref="Generic.Files.LineEndings">
    <exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
  </rule>
</ruleset>
