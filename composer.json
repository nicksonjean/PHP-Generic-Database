{
    "name": "nicksonjean/php-generic-database",
    "description": "Classes para Conexão Agnóstica à Bancos de Dados e Exibição de Dados em Componentes de Forma Persistente",
    "type": "library",
    "require": {
        "php": ">=8.1"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Nickson Jeanmerson",
            "email": "nickson.jeanmrson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4" : {
            "GenericDatabase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },  
    "require-dev": {
        "php": ">=8.1",
        "composer/semver": "^3.3",
        "phpunit/php-code-coverage": "^10.0",
        "phpunit/phpunit": "^10.0",        
        "pcov/clobber": "^2.0",
        "code-lts/doctum": "^5.5",
        "squizlabs/php_codesniffer": "4.0.x-dev",
        "phpstan/phpstan": "1.11.x-dev"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        }
    },
    "scripts":{
        "docs": [
            "@clear:docs",
            "@clear:cache",
            "@run:docs"
        ],
        "lint:analyse": "@run:lint:analyse",
        "lint:debug": "@run:lint:debug",
        "lint:check": [
            "@run:lint:setup",
            "@run:lint:check"
        ],
        "lint:fix": [
            "@run:lint:setup",
            "@run:lint:fix"
        ],
        "test": "@run:test",
        "test:coverage": [
            "@clear:coverage",
            "@run:coverage"
        ],
        "clear": [
            "composer clearcache",
            "composer dump-autoload -o",
            "@clear:lock",            
            "@clear:vendor",
            "@clear:trash"
        ],
        "setup": [
            "@clear",
            "composer install"
        ],
        "run:lint:setup": [
            "php vendor/bin/phpcs --config-set colors 1",
            "php vendor/bin/phpcs --config-set tab_width 2",
            "php vendor/bin/phpcs --config-set report_width 160",
            "php vendor/bin/phpcs --config-set ignore_errors_on_exit 1",
            "php vendor/bin/phpcs --config-set ignore_warnings_on_exit 1"
        ],
        "run:lint:analyse": "php vendor/bin/phpstan --memory-limit=-1 --ansi analyze src/ tests/",
        "run:lint:debug": "php vendor/bin/phpstan --memory-limit=-1 --ansi --xdebug analyze src/ tests/",
        "run:lint:check": "php vendor/bin/phpcs --ignore-annotations --standard=PSR2 src/",
        "run:lint:fix": "php vendor/bin/phpcbf --ignore-annotations --standard=PSR2 src/",
        "run:test": "php vendor/bin/phpunit --colors=always --testdox --do-not-cache-result tests/",
        "run:docs": "php vendor/bin/doctum.php update ./config.php --ignore-parse-errors",
        "run:coverage": "php vendor/bin/phpunit --colors=always --testdox --do-not-cache-result --coverage-html=coverage/ --coverage-filter=src/",
        "run:test:migrate": "vendor/bin/phpunit --migrate-configuration",
        "run:copy": "php scripts/copy.php --source=./scripts/pre-commit --dest=./.git/hooks/pre-commit",
        "clear:docs": "php scripts/eraser.php --dest=./docs/",
        "clear:cache": "php scripts/eraser.php --dest=./cache/",
        "clear:coverage": "php scripts/eraser.php --dest=./coverage/",
        "clear:vendor": "php scripts/eraser.php --dest=./vendor/",
        "clear:trash": "php -r \"@rmdir('./vendor/');\"",
        "clear:lock": "php -r \"@unlink('composer.lock');\"",
        "post-update-cmd": [
            "@run:lint:setup",
            "@run:copy"
        ]
    }
  }
