{
    "name": "nicksonjean/php-generic-database",
    "description": "Classes para Conexão Agnóstica à Bancos de Dados e Exibição de Dados em Componentes de Forma Persistente",
    "type": "library",
    "require": {
        "php": ">=8.1"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Nickson Jeanmerson",
            "email": "nickson.jeanmrson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4" : {
            "GenericDatabase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },  
    "require-dev": {
        "php": ">=8.1",
        "composer/semver": "^3.3",
        "phpunit/php-code-coverage": "^10.0",
        "phpunit/phpunit": "^10.0",        
        "pcov/clobber": "^2.0",
        "code-lts/doctum": "^5.5"
    },
    "scripts":{
        "docs": [
            "@clear:docs",
            "@clear:cache",
            "php vendor/bin/doctum.php update ./config.php --ignore-parse-errors"
        ],
        "test":"php vendor/bin/phpunit --colors=always --testdox --do-not-cache-result tests/",
        "test:coverage": [
            "@clear:coverage",
            "php vendor/bin/phpunit --colors=always --testdox --do-not-cache-result --coverage-html=coverage/ --coverage-filter=src/"
        ],
        "setup": [
            "@clear:uninstall",
            "@clear:lock",
            "composer install"
        ],
        "clear:docs": "php ./eraser.php --dest='./docs/'",
        "clear:cache": "php ./eraser.php --dest='./cache/'",
        "clear:coverage": "php ./eraser.php --dest='./coverage/'",
        "clear:uninstall": "php ./eraser.php --dest='./vendor/'",
        "clear:lock": "php -r \"unlink('composer.lock');\""
    }
}
